    <!--Username-->
    <LinearLayout
        android:id="@+id/usernameCont"
        android:layout_width="match_parent"
        android:background="@drawable/warmup_whitebackground_borderadius20"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="5dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp">
            <TextView
            android:id="@+id/profileUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"

            android:textColor="@color/black"
            android:text="Username">

            </TextView>
    </LinearLayout>


    <!--personal details-->
    <TextView
        android:id="@+id/personalDetails"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="76dp"

        android:gravity="center"
        android:text="Personal Details"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:fontFamily="@font/open_sans"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/usernameCont">

    </TextView>

    <LinearLayout
        android:id="@+id/personalDetailContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="185dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:background="@drawable/whitebackground_borderradius">



        <!--Age detail-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="Age: "
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/ageDetail"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_width="30dp"

                android:layout_height="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:background="@drawable/skyblue_topbotsquare_leftrightcircle">

            </TextView>
        </LinearLayout>

        <!--GENDER detail-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Gender: "
                android:fontFamily="@font/open_sans"
                android:paddingLeft="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="15sp">

            </TextView>

            <TextView
                android:id="@+id/genderDetail"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/skyblue_topbotsquare_leftrightcircle">

            </TextView>
        </LinearLayout>

        <!--HEIGHT detail-->

        <LinearLayout
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Height(cm) : "
                android:paddingLeft="30dp"
                android:fontFamily="@font/open_sans"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="15sp">

            </TextView>

            <TextView
                android:id="@+id/heightDetail"
                android:textColor="@color/black"
                android:gravity="center"
                android:fontFamily="@font/open_sans"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/skyblue_topbotsquare_leftrightcircle">

            </TextView>
        </LinearLayout>

        <!--WEIGHT detail-->

        <LinearLayout
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <!--Age detail-->
            <TextView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Weight(kg) : "
                android:fontFamily="@font/open_sans"
                android:paddingLeft="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="15sp">

            </TextView>

            <TextView
                android:id="@+id/weightDetail"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/skyblue_topbotsquare_leftrightcircle">

            </TextView>
        </LinearLayout>

        <!--ACTIVITY LEVELL detail-->

        <LinearLayout
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Activity Level: "
                android:fontFamily="@font/open_sans"
                android:paddingLeft="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="15sp">

            </TextView>

            <TextView
                android:id="@+id/acivityLevelDetail"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:background="@drawable/skyblue_topbotsquare_leftrightcircle">

            </TextView>
        </LinearLayout>

        <!--BMI GRADE detail-->

        <LinearLayout
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="BMI Grade: "
                android:paddingLeft="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="15sp">

            </TextView>

            <TextView
                android:id="@+id/bmiGradeDetail"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:fontFamily="@font/open_sans"
                android:layout_weight="1"
                android:background="@drawable/skyblue_topbotsquare_leftrightcircle">

            </TextView>
        </LinearLayout>

        <!--BMI detail-->

        <LinearLayout
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="Nutrition Status: "
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/bmiDetail"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:background="@drawable/skyblue_topbotsquare_leftrightcircle">

            </TextView>
        </LinearLayout>


    </LinearLayout>
    <!--Personal detail end container-->

    <!--Edit Profile start-->
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >
       <androidx.cardview.widget.CardView
           android:id="@+id/profileCVId"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="50dp"
            android:textAlignment="center"
            android:textStyle="bold"
           android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/black"
            >

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="30dp"
               android:layout_gravity="center_vertical|center_horizontal"
               android:background="@color/white"
               android:src="@drawable/edit_blackpencil_logo18" />
       </androidx.cardview.widget.CardView>

    </LinearLayout>
    <!--Edit Profile End-->

    <TextView
        android:id="@+id/othersText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Others"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:layout_marginBottom="150dp">

    </TextView>


