    <!--Logout button-->
    <TextView
        android:id="@+id/signOut"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/red_borderradius_10dp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:text="Log Out"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/othersText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/navbar_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/navbar_container">

    </LinearLayout>
    <!--NAVBAR BOTTOm-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navbar_container"
        android:layout_width="match_parent"
        android:layout_height="65dp"

        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/skyblue">
        <!--1st Grid-->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:rowCount="1"
            android:columnCount="5">

            <GridLayout
                android:id="@+id/gridRoutineId"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="1dp"
                android:background="@color/skyblue"
                android:columnCount="1"
                android:rowCount="2">

                <ImageView
                    android:id="@+id/routineImg"
                    android:layout_height="16dp"
                    android:layout_width="16dp"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="3"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/routine_black_100dp">

                </ImageView>

                <TextView
                    android:id="@+id/routineTV"
                    android:text="Routine"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_gravity="fill">

                </TextView>
            </GridLayout>

            <!--2nd Grid-->
            <GridLayout
                android:id="@+id/gridWorkoutId"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="2dp"
                android:background="@color/skyblue"
                android:columnCount="1"
                android:rowCount="2"
                >
                <ImageView
                    android:id="@+id/workoutImg"
                    android:layout_height="16dp"
                    android:layout_width="16dp"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="3"
                    android:background="@color/skyblue"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/workout_black_dumbbell100_foreground"/>

                <TextView

                    android:id="@+id/workoutTV"
                    android:text="Workout"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:background="@color/skyblue"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_gravity="fill">

                </TextView>
            </GridLayout>
            <!--3rd Grid-->
            <GridLayout
                android:id="@+id/gridNutritionId"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="2dp"
                android:background="@color/skyblue"
                android:columnCount="1"
                android:rowCount="2">

                <ImageView
                    android:id="@+id/nutritionImg"
                    android:layout_height="16dp"
                    android:layout_width="16dp"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="3"
                    android:scaleType="centerCrop"
                    android:background="@color/skyblue"
                    android:src="@mipmap/nutrition_black_100dp"/>

                <TextView
                    android:id="@+id/nutritionTV"
                    android:text="Nutrition"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:background="@color/skyblue"
                    android:gravity="center"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_gravity="fill">

                </TextView>


            </GridLayout>

            <!--4th Grid-->
            <GridLayout
                android:id="@+id/gridMacrosId"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="2dp"
                android:background="@color/skyblue"
                android:columnCount="1"
                android:rowCount="2">

                <ImageView
                    android:id="@+id/macrosImg"
                    android:layout_height="16dp"
                    android:layout_width="16dp"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="3"
                    android:scaleType="centerCrop"
                    android:background="@color/skyblue"
                    android:src="@mipmap/macros_black_100dp"/>

                <TextView
                    android:id="@+id/macrosTV"
                    android:text="Macro's"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:background="@color/skyblue"
                    android:gravity="center"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_gravity="fill">

                </TextView>
            </GridLayout>

            <!--5th Grid-->

            <GridLayout
                android:id="@+id/gridProfileId"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="2dp"
                android:background="@color/skyblue"
                android:columnCount="1"
                android:rowCount="2">

                <ImageView
                    android:id="@+id/profileImg"
                    android:layout_height="16dp"
                    android:layout_width="16dp"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="3"
                    android:background="@color/skyblue"
                    android:layout_columnWeight="3"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/profile_white_100dp"/>

                <TextView
                    android:id="@+id/profileTV"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:background="@color/skyblue"
                    android:gravity="center"
                    android:text="Profile"
                    android:textColor="#212121"

                    android:textSize="10sp"
                    android:textStyle="bold">

                </TextView>
            </GridLayout>





        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>