<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
    tools:context=".MacrosResultPg">

    <TextView
        android:id="@+id/macrosText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Macro's Result"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textAlignment="center"

        android:layout_marginTop="20dp" />



    <!-- MACROS OPTIONS -->

    <RelativeLayout
        android:id="@+id/macrosOpt1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">







            <include
                android:id="@+id/macrosBox1Include1"
                layout="@layout/macros_box_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <include
                android:id="@+id/macrosBox1Include2"
                layout="@layout/macros_box_layout"
                android:layout_below="@id/macrosBox1Include1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:id="@+id/macrosResultOkBtn"
                android:layout_marginTop="35dp"
                android:layout_below="@id/macrosBox1Include2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/red_borderradius_10dp"
                >

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textAlignment="center" />
            </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >




    </RelativeLayout>

</RelativeLayout>
