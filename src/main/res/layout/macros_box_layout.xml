<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/macrosBox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/lightskyblue_macrosborderradius_strokeyellow"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">

    <!-- The P-F-C -->
    <TextView
        android:id="@+id/resultGain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="You need 900 Calories per day to lose 1lb per week."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <!-- THE CIRCLE WITH TEXT 1/3 -->
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/amountGramContainer1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="C"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:background="@drawable/circlegreen" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp">

                <TextView
                    android:id="@+id/amountGrams1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 grams"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/amountGrams1"
                    android:text="of Carbs"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </RelativeLayout>

        </LinearLayout>



        <!-- THE CIRCLE WITH TEXT 2/3 -->
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/amountGramContainer2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="P"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:background="@drawable/circleorange" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp">

                <TextView
                    android:id="@+id/amountGrams2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 grams"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/amountGrams2"
                    android:text="of Protein"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </RelativeLayout>







        </LinearLayout>





        <!-- THE CIRCLE WITH TEXT 3/3 -->
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/amountGramContainer3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="F"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:background="@drawable/circleyellow" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp">

                <TextView
                    android:id="@+id/amountGrams3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 grams"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amountGrams4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/amountGrams3"
                    android:text="of Fats"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </RelativeLayout>







        </LinearLayout>









    </LinearLayout>
</LinearLayout>