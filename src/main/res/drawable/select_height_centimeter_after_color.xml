<!-- res/drawable/custom_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state, no click -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="@color/yellow" />
            <stroke
                android:width="2dp"/> <!-- Adjust the stroke width as needed -->

        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="@color/white" />
            <!-- No stroke for the pressed state -->
        </shape>
    </item>
</selector>
