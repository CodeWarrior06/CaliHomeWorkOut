
    <!-- res/drawable/box_background.xml -->
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="@color/yellow" /> <!-- Change this color to the desired pressed color -->
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@color/black" /> <!-- Change this color to the default color -->
            </shape>
        </item>
